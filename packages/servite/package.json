{
  "name": "servite",
  "version": "0.1.2",
  "description": "A vite plugin for React SSR / SSG / CSR",
  "keywords": [
    "vite-plugin",
    "ssr",
    "ssg",
    "csr",
    "islands"
  ],
  "author": "Codpoe <codpoe.me@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Codpoe/servite.git"
  },
  "bugs": {
    "url": "https://github.com/Codpoe/servite/issues"
  },
  "homepage": "https://github.com/Codpoe/servite#readme",
  "type": "module",
  "files": [
    "bin",
    "dist",
    "server.d.ts",
    "client.d.ts",
    "global.d.ts"
  ],
  "main": "dist/node/index.js",
  "types": "dist/node/index.d.ts",
  "exports": {
    ".": "./dist/node/index.js",
    "./server": "./dist/server/index.js",
    "./client": "./dist/client/index.js"
  },
  "bin": {
    "servite": "bin/servite.js"
  },
  "scripts": {
    "dev": "pnpm run prebuild && rimraf dist && pnpm run copy && tsc -w",
    "prebuild": "tsx scripts/prebuild src/prebuild/*",
    "build": "pnpm run prebuild && rimraf dist && pnpm run copy && tsc",
    "copy": "tsx scripts/copy-client",
    "release": "release-it"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "hooks": {
      "after:bump": [
        "npm run build"
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md",
        "header": "# Changelog"
      }
    }
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.19",
    "@types/fs-extra": "^9.0.13",
    "@types/lz-string": "^1.3.34",
    "@types/micromatch": "^4.0.2",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "cpy": "^9.0.1",
    "esbuild": "^0.16.3",
    "rollup": "^3.7.0",
    "vite": "^4.0.1"
  },
  "dependencies": {
    "@babel/core": "^7.19.6",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@vitejs/plugin-react": "^3.0.0",
    "cac": "^6.7.12",
    "defu": "^6.1.0",
    "fast-glob": "^3.2.12",
    "fs-extra": "^10.1.0",
    "gray-matter": "^4.0.3",
    "gzip-size": "^7.0.0",
    "h3": "^1.0.1",
    "jest-docblock": "^28.1.1",
    "lz-string": "^1.4.4",
    "micromatch": "^4.0.5",
    "nitropack": "^1.0.0",
    "nprogress": "^0.2.0",
    "ora": "^6.1.2",
    "perfect-debounce": "^0.1.3",
    "picocolors": "^1.0.0",
    "react-helmet-async": "^1.3.0",
    "react-router-dom": "6.3.0",
    "react-ssr-prepass": "^1.5.0",
    "ufo": "^1.0.1",
    "upath": "^2.0.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
